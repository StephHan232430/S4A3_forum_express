<h1>餐廳後台</h1>

<br />

<a href='/admin/restaurants' class="text-dark">Restaurants</a> |
<a href='/admin/users' class="text-white bg-info rounded p-1">Users</a>

<br />
<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{index @index}}</th>
      <td>{{this.email}}</td>
      {{#if this.isAdmin}}
      <td>admin</td>
      {{else}}
      <td>user</td>
      {{/if}}
      <td>
        {{#if this.showLink}}
        <form action="/admin/users/{{this.id}}?_method=PUT" method="POST" class="btn btn-link" onclick="submit()">
          set as {{#if this.isAdmin}}user{{else}}admin{{/if}}
        </form>
        {{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>