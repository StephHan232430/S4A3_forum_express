<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img class="image-responsive rounded-circle" src="{{user.image}}" style="width: 300px;margin-bottom: 25px;">
      </div>
      <div class="col-md-8">
        <h6>{{user.name}}</h6>
        <p>{{user.email}}</p>
        <a class="btn btn-primary" href="/users/{{user.id}}/edit" role="button">Edit</a>
      </div>
    </div>
  </div>
</div>
<br />
<br />

{{!-- 使用者評論過的餐廳面板 --}}
<div class="card">
  <h5 class="card-header">{{commentedRestaurants.length}} 已評論餐廳</h5>
  <div class="card-body">
    {{#each commentedRestaurants}}
    <a href="/restaurants/{{this.id}}"><img class="img-thumbnail" src="{{this.image}}" style="width: 100px;"></a>
    {{/each}}
  </div>
</div>